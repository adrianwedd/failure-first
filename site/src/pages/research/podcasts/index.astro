---
import ResearchLayout from '../../../layouts/ResearchLayout.astro';
import PageHeader from '../../../components/PageHeader.astro';

const podcasts = [
  {
    title: "Cross-Modal Vulnerability Inheritance in VLA Systems",
    description: "AI-generated audio overview of Report 40, covering how adversarial vulnerabilities transfer across vision-language-action model architectures through shared encoders and embedding-mediated control.",
    src: "/audio/research/report_40_cross_modal_vulnerability_inheritance.m4a",
    report: { label: "Report 40", href: "/research/reports/report-40-cross-modal-vulnerability-inheritance/" },
    date: "2026-02-08",
    format: "m4a",
  },
  {
    title: "The State of VLA Model Safety: 2026",
    description: "AI-generated audio overview of Intelligence Brief IB-2026-001, assessing the VLA safety landscape, capability-safety gaps, and the regulatory vacuum facing organizations deploying VLA-driven robotic systems.",
    src: "/audio/research/vla_safety_overview_notebooklm.mp3",
    report: { label: "Brief IB-2026-001", href: "/research/intelligence-briefs/ib-2026-001-state-of-vla-safety/" },
    date: "2026-02-08",
    format: "mp3",
  },
  {
    title: "Gemini Robotics-ER: Safety Implications",
    description: "AI-generated audio overview discussing Google DeepMind's Gemini Robotics-ER model and its implications for embodied AI safety evaluation.",
    src: "/audio/research/gemini_robotics_er_overview_notebooklm.mp3",
    report: null,
    date: "2026-02-08",
    format: "mp3",
  },
];
---

<ResearchLayout
  title="Research Podcasts | Research | Failure-First"
  description="AI-generated audio overviews of F41LUR3-F1R57 research reports and intelligence briefs, produced with NotebookLM."
  breadcrumbs={[{ label: "Research", href: "/research/" }, { label: "Podcasts" }]}
  status="active"
>
  <PageHeader
    title="Research Audio"
    tagline="AI-generated overviews of our research, produced with NotebookLM"
  />

  <p>
    These audio overviews are generated by Google's NotebookLM from our published research
    reports and intelligence briefs. They provide an accessible summary of key findings
    in a conversational podcast format.
  </p>

  <section class="podcast-list">
    {podcasts.map((p) => (
      <div class="podcast-card card">
        <div class="podcast-header">
          <h3>{p.title}</h3>
          <div class="podcast-meta">
            {p.report && (
              <a href={p.report.href} class="podcast-report-link">{p.report.label}</a>
            )}
            <span class="podcast-format">{p.format.toUpperCase()}</span>
            <time>{p.date}</time>
          </div>
        </div>
        <p>{p.description}</p>
        <audio controls src={p.src} preload="metadata"></audio>
      </div>
    ))}
  </section>
</ResearchLayout>

<style>
  .podcast-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .podcast-card {
    border-left: 3px solid var(--accent-primary, #f59e0b);
  }

  .podcast-header {
    margin-bottom: 0.75rem;
  }

  .podcast-header h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.125rem;
  }

  .podcast-meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text-secondary, #888);
  }

  .podcast-report-link {
    color: var(--accent-primary, #f59e0b);
    text-decoration: none;
    font-weight: 600;
  }

  .podcast-report-link:hover {
    text-decoration: underline;
  }

  .podcast-format {
    padding: 0.125rem 0.375rem;
    border: 1px solid var(--border-color, #333);
    border-radius: 3px;
  }

  .podcast-card p {
    font-size: 0.875rem;
    margin: 0 0 1rem 0;
    color: var(--fg-dim, #b0b8c5);
  }

  .podcast-card audio {
    width: 100%;
    height: 40px;
  }
</style>
