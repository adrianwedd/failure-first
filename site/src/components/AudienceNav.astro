---
/**
 * AudienceNav: Entry points for different audiences
 * Provides tailored navigation for policymakers, researchers, and industry
 */

const audiences = [
  {
    id: "policymakers",
    title: "Policymakers",
    description: "Evidence-based briefs for AI safety regulation",
    icon: "policy",
    links: [
      { label: "Policy Briefs", href: "/policy/" },
      { label: "Executive Summaries", href: "/policy/capability-safety-spectrum/" },
      { label: "Embodied AI Safety", href: "/policy/embodied-ai-safety/" },
    ],
    highlight: "2 active policy briefs",
  },
  {
    id: "researchers",
    title: "Researchers",
    description: "Methodology, data, and reproducible findings",
    icon: "research",
    links: [
      { label: "Research Hub", href: "/research/" },
      { label: "Methodology", href: "/research/methodology/" },
      { label: "Cite This Work", href: "/cite/" },
    ],
    highlight: "10+ research studies",
  },
  {
    id: "industry",
    title: "Industry",
    description: "Benchmarks, datasets, and implementation guides",
    icon: "industry",
    links: [
      { label: "Framework", href: "/framework/" },
      { label: "Benchmark Harness", href: "/framework/harness/" },
      { label: "Datasets", href: "/framework/datasets/" },
    ],
    highlight: "Open-source tools",
  },
];
---

<div class="audience-nav">
  {audiences.map((audience) => (
    <div class="audience-card card">
      <div class="audience-header">
        <div class="audience-icon" aria-hidden="true">
          {audience.icon === "policy" && <span>&#x2696;</span>}
          {audience.icon === "research" && <span>&#x2B21;</span>}
          {audience.icon === "industry" && <span>&#x2699;</span>}
        </div>
        <h3>{audience.title}</h3>
      </div>
      <p class="audience-desc">{audience.description}</p>
      <ul class="audience-links">
        {audience.links.map((link) => (
          <li><a href={link.href}>{link.label} &rarr;</a></li>
        ))}
      </ul>
      <span class="audience-highlight">{audience.highlight}</span>
    </div>
  ))}
</div>

<style>
  .audience-nav {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin: 2rem 0;
  }

  .audience-card {
    display: flex;
    flex-direction: column;
  }

  .audience-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .audience-icon {
    font-size: 1.5rem;
    color: var(--accent-primary);
    opacity: 0.8;
    line-height: 1;
  }

  .audience-card h3 {
    margin: 0;
    font-size: 1.0625rem;
  }

  .audience-desc {
    font-size: 0.875rem;
    color: var(--fg-muted);
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .audience-links {
    list-style: none;
    padding: 0;
    margin: 0 0 1rem 0;
  }

  .audience-links li {
    padding: 0.375rem 0;
    border-top: 1px solid var(--border-subtle);
  }

  .audience-links li:first-child {
    border-top: none;
  }

  .audience-links a {
    font-size: 0.8125rem;
    color: var(--fg-dim);
    transition: color var(--transition-duration) var(--transition-easing);
  }

  .audience-links a:hover {
    color: var(--accent-primary);
  }

  .audience-highlight {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    color: var(--recovery-stable);
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  @media (max-width: 768px) {
    .audience-nav {
      grid-template-columns: 1fr;
    }
  }
</style>
