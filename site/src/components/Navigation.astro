---
const pathname = Astro.url.pathname;

interface NavItem {
  label: string;
  href: string;
  children?: { label: string; href: string; description?: string }[];
}

const navItems: NavItem[] = [
  {
    label: "Research",
    href: "/research/",
    children: [
      { label: "All Studies", href: "/research/", description: "Research hub" },
      { label: "Multi-Agent", href: "/research/moltbook/", description: "Moltbook analysis" },
      { label: "Attack Taxonomy", href: "/research/attack-taxonomy/", description: "34+ patterns" },
      { label: "Defense Patterns", href: "/research/defense-patterns/", description: "How models resist" },
      { label: "Methodology", href: "/research/methodology/", description: "Our approach" },
    ],
  },
  { label: "Blog", href: "/blog/" },
  { label: "Framework", href: "/framework/" },
  {
    label: "Policy",
    href: "/policy/",
    children: [
      { label: "Policy Briefs", href: "/policy/", description: "All briefs" },
      { label: "Capability vs Safety", href: "/policy/capability-safety-spectrum/", description: "U-shaped curve" },
      { label: "Embodied AI Safety", href: "/policy/embodied-ai-safety/", description: "Beyond alignment" },
    ],
  },
  { label: "Manifesto", href: "/manifesto/" },
  { label: "About", href: "/about/" },
];

function isActive(href: string, current: string): boolean {
  if (href === "/") return current === "/";
  return current.startsWith(href);
}
---

<nav class="site-nav" aria-label="Main navigation">
  <div class="nav-inner">
    <a href="/" class="nav-brand">
      <span class="nav-brand-icon">&#x2B22;</span>
      <span class="nav-brand-text">F41LUR3-F1R57</span>
    </a>

    <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false" aria-controls="nav-links">
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
    </button>

    <ul class="nav-links" id="nav-links" role="list">
      {navItems.map((item) => (
        <li class:list={[{ "has-dropdown": item.children }]}>
          <a
            href={item.href}
            class:list={[{ active: isActive(item.href, pathname) }]}
            aria-current={isActive(item.href, pathname) ? "page" : undefined}
            aria-haspopup={item.children ? "true" : undefined}
          >
            {item.label}
            {item.children && <span class="dropdown-arrow" aria-hidden="true">&#x25BC;</span>}
          </a>
          {item.children && (
            <ul class="dropdown" role="list">
              {item.children.map((child) => (
                <li>
                  <a href={child.href}>
                    <span class="dropdown-label">{child.label}</span>
                    {child.description && <span class="dropdown-desc">{child.description}</span>}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(5, 8, 16, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-subtle);
  }

  .nav-inner {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent-primary);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    font-weight: 500;
    border-bottom: none;
    letter-spacing: 0.02em;
  }

  .nav-brand:hover {
    border-bottom: none;
  }

  .nav-brand-icon {
    font-size: 1.125rem;
    line-height: 1;
  }

  .nav-links {
    display: flex;
    gap: 0.25rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links > li {
    position: relative;
  }

  .nav-links > li > a {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 0.75rem;
    color: var(--fg-muted);
    font-size: 0.8125rem;
    font-weight: 400;
    border-bottom: none;
    border-radius: 4px;
    transition: color var(--transition-duration) var(--transition-easing),
                background var(--transition-duration) var(--transition-easing);
  }

  .nav-links > li > a:hover {
    color: var(--fg);
    background: rgba(0, 210, 255, 0.05);
    border-bottom: none;
  }

  .nav-links > li > a.active {
    color: var(--accent-primary);
    background: rgba(0, 210, 255, 0.08);
  }

  .dropdown-arrow {
    font-size: 0.5rem;
    opacity: 0.6;
    transition: transform var(--transition-duration) var(--transition-easing);
  }

  /* Dropdown menu */
  .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 200px;
    background: rgba(5, 8, 16, 0.97);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--border-subtle);
    border-radius: 4px;
    padding: 0.5rem;
    margin-top: 0.25rem;
    list-style: none;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: opacity var(--transition-duration) var(--transition-easing),
                visibility var(--transition-duration) var(--transition-easing),
                transform var(--transition-duration) var(--transition-easing);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .has-dropdown:hover .dropdown,
  .has-dropdown:focus-within .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .has-dropdown:hover .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown li {
    margin: 0;
  }

  .dropdown a {
    display: flex;
    flex-direction: column;
    padding: 0.5rem 0.75rem;
    border-radius: 3px;
    border-bottom: none;
    transition: background var(--transition-duration) var(--transition-easing);
  }

  .dropdown a:hover {
    background: rgba(0, 210, 255, 0.08);
    border-bottom: none;
  }

  .dropdown-label {
    color: var(--fg);
    font-size: 0.8125rem;
  }

  .dropdown-desc {
    color: var(--fg-muted);
    font-size: 0.6875rem;
    margin-top: 0.125rem;
  }

  /* Mobile hamburger */
  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .nav-toggle:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .nav-toggle-bar {
    display: block;
    width: 20px;
    height: 2px;
    background: var(--fg-muted);
    border-radius: 1px;
    transition: transform var(--transition-duration) var(--transition-easing),
                opacity var(--transition-duration) var(--transition-easing);
  }

  @media (max-width: 768px) {
    .nav-toggle {
      display: flex;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 3.5rem;
      left: 0;
      right: 0;
      flex-direction: column;
      background: rgba(5, 8, 16, 0.97);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--border-subtle);
      padding: 0.5rem;
      gap: 0;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-links > li > a {
      padding: 0.75rem 1rem;
    }

    /* Mobile dropdown behavior */
    .dropdown {
      position: static;
      min-width: 100%;
      opacity: 1;
      visibility: visible;
      transform: none;
      background: transparent;
      border: none;
      box-shadow: none;
      margin: 0;
      padding: 0 0 0 1rem;
      display: none;
    }

    .has-dropdown.mobile-open .dropdown {
      display: block;
    }

    .dropdown a {
      padding: 0.5rem 1rem;
    }

    /* Hamburger animation when open */
    .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(1) {
      transform: rotate(45deg) translate(4px, 4px);
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(3) {
      transform: rotate(-45deg) translate(4px, -4px);
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav-toggle');
  const links = document.querySelector('.nav-links');
  const dropdownParents = document.querySelectorAll('.has-dropdown');

  if (toggle && links) {
    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!expanded));
      links.classList.toggle('open');
    });

    // Close menu on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && links.classList.contains('open')) {
        links.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
        toggle.focus();
      }
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (
        links.classList.contains('open') &&
        !links.contains(e.target as Node) &&
        !toggle.contains(e.target as Node)
      ) {
        links.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
      }
    });
  }

  // Mobile dropdown toggle
  dropdownParents.forEach((parent) => {
    const link = parent.querySelector(':scope > a');
    if (link && window.innerWidth <= 768) {
      link.addEventListener('click', (e) => {
        if (window.innerWidth <= 768) {
          e.preventDefault();
          parent.classList.toggle('mobile-open');
        }
      });
    }
  });
</script>
