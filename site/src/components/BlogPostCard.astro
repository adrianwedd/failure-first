---
interface Props {
  title: string;
  description: string;
  date: Date;
  href: string;
  tags?: string[];
}

const { title, description, date, href, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a href={href} class="blog-card card">
  <time class="blog-card-date" datetime={date.toISOString()}>{formattedDate}</time>
  <h3>{title}</h3>
  <p>{description}</p>
  {tags.length > 0 && (
    <div class="blog-card-tags">
      {tags.map((tag) => (
        <span class="blog-card-tag">{tag}</span>
      ))}
    </div>
  )}
</a>

<style>
  .blog-card {
    display: block;
    text-decoration: none;
    border-bottom: none;
  }

  .blog-card:hover {
    border-bottom: none;
  }

  .blog-card-date {
    display: block;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    color: var(--fg-muted);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: 0.375rem;
  }

  .blog-card h3 {
    margin: 0 0 0.375rem;
    font-size: 1.0625rem;
  }

  .blog-card p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--fg-dim);
  }

  .blog-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.75rem;
  }

  .blog-card-tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.5625rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 0.125rem 0.375rem;
    border: 1px solid var(--border);
    color: var(--fg-muted);
    border-radius: 2px;
  }
</style>
