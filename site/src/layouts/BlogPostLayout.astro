---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
}

const { title, description, date, tags } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | Blog | Failure-First`} description={description} type="article" publishedDate={date.toISOString().split('T')[0]}>
  <Breadcrumbs items={[
    { label: "Blog", href: "/blog/" },
    { label: title },
  ]} />
  <article class="blog-post">
    <header class="post-header">
      <time class="post-date" datetime={date.toISOString()}>{formattedDate}</time>
      <h1>{title}</h1>
      <p class="post-description">{description}</p>
      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="post-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 100%;
  }

  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .post-date {
    display: block;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--fg-muted);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: 0.5rem;
  }

  .post-header h1 {
    font-size: 2rem;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  .post-description {
    font-size: 1.0625rem;
    color: var(--fg-dim);
    line-height: 1.5;
    margin: 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 0.1875rem 0.5rem;
    border: 1px solid var(--border);
    color: var(--fg-muted);
    border-radius: 3px;
  }

  .post-content {
    line-height: 1.7;
  }

  .post-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.375rem;
    color: var(--fg-dim);
  }

  .post-content :global(strong) {
    color: var(--fg);
  }

  .post-content :global(a) {
    color: var(--accent-primary);
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--border-emphasis);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--fg-dim);
    font-style: italic;
  }

  .post-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875em;
    background: var(--bg-elevated);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
  }

  .post-content :global(pre) {
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  @media (max-width: 600px) {
    .post-header h1 {
      font-size: 1.5rem;
    }
  }
</style>
