---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: Crumb[];
  type?: 'website' | 'article';
  publishedDate?: string;
  modifiedDate?: string;
  keywords?: string;
  noindex?: boolean;
}

const { 
  title, 
  description, 
  breadcrumbs = [],
  type,
  publishedDate,
  modifiedDate,
  keywords,
  noindex
} = Astro.props;
---

<BaseLayout 
  title={title} 
  description={description}
  type={type}
  publishedDate={publishedDate}
  modifiedDate={modifiedDate}
  keywords={keywords}
  noindex={noindex}
>
  {breadcrumbs.length > 0 && <Breadcrumbs items={breadcrumbs} />}
  <slot />
</BaseLayout>
