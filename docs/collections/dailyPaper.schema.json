        },
        "description": {
          "type": "string"
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "arxiv": {
          "type": "string"
        },
        "authors": {
          "type": "string"
        },
        "paperType": {
          "type": "string",
          "enum": [
            "empirical",
            "theoretical",
            "methods",
            "survey",
            "position"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "audio": {
          "type": "string"
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "date",
        "arxiv",
        "authors",
        "paperType"
      ],
      "additionalProperties": false
